{
	"parser": "babel-eslint",
	"extends": "airbnb",
	"env": {
		"browser": true,
		"node": true,
	},
	"rules": {
		"no-tabs": "off",
		"indent": ["off", "tab"],
		"import/extensions": ["error", "always", {
			"js": "never",
			"jsx": "never",
			"coffee": "never"
		}],
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
		"max-len": [2, 150, 4],
	}
}
